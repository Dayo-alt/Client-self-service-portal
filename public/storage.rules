rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Each user can read/write only their own avatars folder
    match /avatars/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Optional: allow public read for other static files
    match /{allPaths=**} {
      allow read: if true;
    }
  }
}